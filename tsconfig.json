{
  "include": [
    "**/*.d.ts",
    "node_modules/@lightning/lng-typed/**/*",
  ],
  "compilerOptions": {
    "outDir": "./types",
    "sourceMap": true,
    "module": "es6",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true
  }
}