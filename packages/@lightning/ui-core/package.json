{
  "name": "@lightning/ui-core",
  "version": "1.8.0",
  "peerDependencies": {
    "@lightningjs/core": "^2.7.1"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lightning-ui-core.d.ts",
        "default": "./dist/lightning-ui-core.min.js"
      }
    }
  },
  "main": "./dist/lightning-ui-core.min.js",
  "types": "./dist/lightning-ui-core.d.ts",
  "scripts": {
    "start": "yarn run generateStorybookData && yarn start-storybook --no-manager-cache -p 8000",
    "build": "rm -rf ./dist && rollup --config ../../../rollup/rollup.config.js --name lightning-ui-core",
    "lint": "eslint './src/**/*.js' && eslint . --ext .ts",
    "lint:fix": "eslint --fix './src/**/*.js' && eslint . --fix --ext .ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --colors",
    "test:updateSnapshot": "NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot --colors",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --no-coverage --watch --colors"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@lightning/ui-test-utils": "workspace:^",
    "@mdx-js/react": "^1.6.22",
    "babel-jest": "^29.0.3",
    "babel-loader": "^8.2.5",
    "enhanced-resolve": "^5.10.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-webgl-canvas-mock": "^0.2.3",
    "lightning-ui-docs": "workspace:^",
    "rollup": "^3.2.5",
    "semantic-release": "^19.0.5",
    "semantic-release-monorepo": "^7.0.5"
  },
  "dependencies": {
    "@suite-themes/base-lightning-tv": "^1.10.0",
    "debounce": "^1.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3"
  },
  "files": [
    "dist/*"
  ]
}
