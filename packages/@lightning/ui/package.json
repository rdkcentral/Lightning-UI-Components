{
  "name": "@lightning/ui",
  "description": "Lightning UI Components",
  "version": "5.6.1",
  "peerDependencies": {
    "@lightningjs/core": "^2.7.1"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lightning-ui.d.ts",
        "default": "./dist/lightning-ui.min.js"
      }
    }
  },
  "main": "./dist/lightning-ui.min.js",
  "types": "./dist/lightning-ui.d.ts",
  "scripts": {
    "build": "yarn workspace @lightning/ui-core build && rm -rf ./dist && rollup --config ../../../rollup/rollup.config.js --name lightning-ui",
    "lint": "eslint './src/**/*.js' && eslint . --ext .ts",
    "lint:fix": "eslint --fix './src/**/*.js' && eslint . --fix --ext .ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --verbose --colors",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --no-coverage --watch --colors",
    "test:updateSnapshot": "NODE_OPTIONS=--experimental-vm-modules jest --updateSnapshot  --colors"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@lightning/ui-test-utils": "workspace:^",
    "@mdx-js/react": "^1.6.22",
    "babel-jest": "^29.0.3",
    "babel-loader": "^8.2.5",
    "enhanced-resolve": "^5.10.0",
    "eslint": "^8.29.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-webgl-canvas-mock": "^0.2.3",
    "lightning-ui-docs": "workspace:^",
    "rollup": "^3.2.5",
    "semantic-release": "^19.0.5",
    "semantic-release-monorepo": "^7.0.5"
  },
  "dependencies": {
    "@lightning/ui-core": "workspace:^",
    "@lightningjs/core": "^2.7.1"
  },
  "files": [
    "dist/*"
  ]
}
