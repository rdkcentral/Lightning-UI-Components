{
  "name": "@lightning/monorepo",
  "version": "1.0.21",
  "packageManager": "yarn@3.2.3",
  "private": true,
  "workspaces": [
    "packages/@lightning/ui",
    "packages/@lightning/ui-core",
    "packages/@lightning/ui-test-utils",
    "packages/@lightning/ui-extensions",
    "packages/apps/**/*"
  ],
  "scripts": {
    "start": "yarn workspace lightning-ui-docs start",
    "prepare": "husky install",
    "kick-concourse": "git commit --no-verify --allow-empty -m 'Trigger Concourse' && git push origin",
    "releaseCi": "yarn node ./ci/release/run",
    "release": "git fetch origin && git checkout develop && git pull origin develop && git pull origin release && git push origin develop && git checkout release && git pull origin release && git pull origin develop && git push origin release && fly -t ci trigger-job --job lightning-ui/publish",
    "updateReleaseLog": "yarn node ./ci/release/updateReleaseLog.js",
    "lint": "yarn workspaces foreach run lint",
    "lint:fix": "yarn workspaces foreach run lint:fix",
    "test": "yarn workspaces foreach -v run test",
    "test:updateSnapshot": "yarn workspaces foreach -v run test:updateSnapshot",
    "clean": "yarn workspaces foreach exec rm -rf ./dist ./storybook-static ./tmp && yarn exec rm -rf node_modules && find ./packages -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "postinstall": "node ./scripts/post-install.js",
    "createComponent": "node bin/create.js",
    "cy:open": "cypress open",
    "cy:open:vrt": "cypress open --env testType=vrt",
    "cy:run": "cypress run --env testType=vrt --browser chrome",
    "cy:info": "cypress info",
    "cy:verify": "cypress verify",
    "cy:tags": "cypress run --headed --browser chrome",
    "cy:vrt": "yarn run cy:tags --env testType=vrt,TAGS=@sanity-vrt,ON_CI=true",
    "cy:sanityVrt": "yarn run cy:tags --env testType=vrt,TAGS='@sanity or @sanity-vrt and not @skip',ON_CI=true",
    "cy:launchAppAndRunSanityVrtTests": "start-server-and-test 'yarn start' http://localhost:8000 'yarn run cy:sanityVrt'",
    "cy:preSanityTestsExec": "rm -rf cypress/reports && rm -rf cypress/videos",
    "cy:launchAppAndRunSanityVrtTestsParallel": "start-server-and-test 'yarn start' http://localhost:8000 'yarn run cy:parallel'",
    "cy:parallel": "cypress-parallel -s cy:sanityVrt -t 4 -d cypress/e2e/features/sanity -m false",
    "cy:postSanityTestsExec": "bash cypress/postSanityTests.sh",
    "report:add:video": "node cypress/support/helpers/update-report-include-video.js"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^13.0.2",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-image": "^3.0.1",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@visual-regression-tracker/agent-cypress": "^5.5.0",
    "chai-spies": "^1.0.0",
    "cypress": "^10.11.0",
    "cypress-mochawesome-reporter": "^3.2.2",
    "cypress-parallel": "^0.9.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^6.0.0",
    "generate-changelog": "^1.8.0",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jest-watch-typeahead": "^2.2.1",
    "mochawesome-merge": "^4.2.1",
    "prettier": "^2.7.1",
    "rollup": "^3.2.5",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "start-server-and-test": "1.14.0",
    "typescript": "^4.8.4"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false,
    "stepDefinitions": [
      "cypress/e2e/step-definitions/*.{js,ts}"
    ],
    "filterSpecs": true
  },
  "resolutions": {
    "eslint-plugin-import@2.25.2": "patch:eslint-plugin-import@npm%3A2.25.2#./.yarn/patches/eslint-plugin-import-npm-2.25.2-98db0f107a.patch"
  }
}
