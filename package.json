{
  "name": "@lightning/ui",
  "version": "1.0.0-alpha.21",
  "dependencies": {},
  "peerDependencies": {
    "wpe-lightning": "1.x"
  },
  "browser": "index.js",
  "main": "index.js",
  "bin": {
    "bootstrap": "./bin/bootstrap.sh"
  },
  "files": [
    "index.js",
    "{bin,components,mixins,utils}/**/*.js",
    "!components/**/*.stories.js",
    "!{components,utils}/**/*.test.js",
    "!components/lightning-test-renderer.js",
    "!components/lightning-test-utils.js",
    "!public/"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^8.3.4",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-docs": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/html": "^6.0.21",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "canvas": "^2.6.1",
    "gh-pages": "^3.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-environment-jsdom-fifteen": "^1.0.2",
    "jest-webgl-canvas-mock": "^0.2.3",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "semantic-release": "^17.1.1",
    "wpe-lightning": "^1.9.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./{components,utils}/**/*.js": [
      "npm run lint"
    ]
  },
  "repository": {
    "url": "https://github.comcast.com/Lightning/lightning-ui"
  },
  "scripts": {
    "build": "build-storybook -c .storybook -o dist",
    "lint": "npx prettier --check './{components,utils}/**/*.js'",
    "lint:fix": "npx prettier --write './{components,utils}/**/*.js'",
    "gh-pages": "gh-pages -d dist",
    "create": "sh bin/create.sh",
    "start": "start-storybook -p 8000",
    "start:ci": "start-storybook --ci --smoke-test",
    "test": "jest --coverage",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch",
    "test:updateSnapshot": "jest --updateSnapshot"
  },
  "publishConfig": {
    "registry": "https://artifactory.comcast.com/artifactory/api/npm/Lightning-npm-releases/"
  }
}
